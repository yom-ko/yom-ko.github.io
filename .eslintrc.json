{
  "env": {
    "browser": true,
    "es6": true,
    "jquery": true
  },

  "extends": "airbnb-base",
  "plugins": [
    "import"
  ],

  "rules": {
    "func-names": ["error", "never"],
    "no-console": ["off"],
    "no-plusplus": ["error", { "allowForLoopAfterthoughts": true }],
    "generator-star-spacing": ["error", "before"],
    "yield-star-spacing": ["error", "before"]
  }
}
